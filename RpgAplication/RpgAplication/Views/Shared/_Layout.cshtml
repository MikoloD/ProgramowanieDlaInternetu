<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RpgDatabase</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/css/full-width-pics.css" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top op">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">Start</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarResponsive">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="UserSystem" asp-action="Register">Rejestracja</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="UserSystem" asp-action="Login">Zaloguj</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="py-5 min-vh-100" style="background-image: url('https://miro.medium.com/max/4000/0*SXdpes3ul-LOZh5x.jpg'); ">
        <div class="container"></div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="py-4 bg-dark">
        <div class="container">
            <p class="m-0 text-center text-white">my.contact@costam.pl</p>
            <p class="m-0 text-center text-white">Copyright &copy; RpgSite 2021</p>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>